    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout android:id="@+id/reTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_cloudy"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/k"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空调："
                android:textColor="@android:color/white" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/kAd"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="较少开启"
                android:textColor="@android:color/white" />

        </RelativeLayout>
        <RelativeLayout android:layout_below="@+id/reTitle"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            
            <TextView android:id="@+id/kDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:text="不宜洗车，未来24小时内有雨，如果在此期间洗车，雨水和路上的泥水可能会再次弄脏您的爱车。"/>
        <View android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"/>
        </RelativeLayout>
        
        
        

